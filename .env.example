# Server-only. NEVER expose this in frontend.
OPENAI_API_KEY=sk-your-key

# Your Agent Builder workflow id (must start with wf_...)
OPENAI_WORKFLOW_ID=wf_...

# Comma-separated origin allowlist for CORS (exact match).
# Examples:
# ALLOW_ORIGINS=http://localhost:3000,https://yourdomain.com,https://www.yoursite.com
ALLOW_ORIGINS=http://localhost:3000

# Optional ChatKit UI feature toggles (defaults are minimal):
# - Hide thread title/history UI (helps remove lines like "Turkish Hello Exchange")
CHATKIT_HISTORY_ENABLED=false
CHATKIT_AUTOMATIC_THREAD_TITLING_ENABLED=false
